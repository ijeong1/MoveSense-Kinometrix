<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kinometrix.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <application
        android:name=".SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.SelectTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.LedTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.LinearAccelerationTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.HeartRateTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.TemperatureTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.MagneticFieldTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.AngularVelocityActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.tests.MultiSubscribeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.SendLogsToGoogleDriveActivity"
            android:screenOrientation="portrait"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths"/>
        </provider>

        <activity
            android:name=".api.dfu.DfuActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name=".api.dfu.DfuService"
            android:exported="true"
            android:enabled="true"/>

        <receiver
            android:name=".api.adb.AdbBridge"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MOVESENSE"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".api.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->

            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".api.mainView.MainViewActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.MY_ACTION"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".api.movesense.MovesenseActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.multi_connection.connection.MultiConnectionActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.saved_data.SavedDataActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.about.AboutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".api.sensors.sensors_list.SensorListActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".api.dfu.DfuActivity2"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".api.multi_connection.sensor_usage.MultiSensorUsageActivity"
            android:screenOrientation="portrait">
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="548f21c29738f5fef40d342e2968e19cc92f0bb7" />
    </application>

</manifest>
